<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flipzz: A Two Player Game</title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/game.css">
</head>



<body>
    <header>
        <section id="top">
            <div id="logo">
                <a href="./">
                    <img src="/assets/logo_cropped.webp" alt="Logo">
                </a>
            </div>
        </section>
    </header>

    <main>
        <section id="left">
            <!-- ANCHOR[id=players] -->
            <div id="you" class="infocard points lightbg">
                <p class="points"> You: 
                    <span id="points-you"> 2 </span>
                </p>
            </div>
            <div id="opponent" class="infocard points darkbg">
                <p class="points"> Opponent: 
                    <span id="points-opponent"> 2 </span>
                </p>
            </div>
        </section>

        <section id="center">
            <div id="board-wrapper">
                <div id="board">
                    <!-- Scriplet tags to embed JS in HTML-->
                    <% for (let i = 0; i < 8; i++) { %>
                        <% for(let j = 0; j < 8; j++) { %>
                            <div class="chip" data-pos=<%= (i*8)+j %>> 
                                <div></div>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </section>

        <section id="right">
            <div id="status" class="infocard">
                <p id="status-name"></p>
                <p id="status-header"> Status </p>
                <p id="status-body"> Waiting for second player to connect... </p>
            </div>
            <!-- ANCHOR[id=timer]  -->
            <div id="clock" class="infocard">
                <p id="time-passed"> Time passed: <br> <span id="time">0:00</span> </p>
            </div>
        </section>
       

    </main>

    <script src="/js/game.js"></script>
    <script src="/js/util/config.js"></script>
    <script src="/js/util/position.js"></script>
    <script src="/js/util/board.js"></script>
    <script src="/js/util/flipzz.js" ></script>
</body>


</html>